    "version": "2.0.0",
    "tasks": [
        {
            "label": "build e2e tests",
            "type": "shell",
            "command": "make e2etest",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "/src/build"
            }
        },
        {
            "label": "run e2e tests",
            "type": "shell",
            "command": "signer/src/e2etest",
            "dependsOn": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "/src/build"
            }
        }
    ]
